{
  "version": "1.10.11",
  "name": "anywhere",
  "description": "随时随地，丝滑召唤，您的AI快捷助手(支持MCP)",
  "main": "/main/index.html",
  "preload": "preload.js",
  "logo": "favicon.png",
  "platform": [
    "win32",
    "darwin",
    "linux"
  ],
  "pluginSetting": {
    "single": true
  },
  "features": [
    {
      "code": "Anywhere Settings",
      "explain": "设置页面",
      "cmds": [
        "Anywhere Settings"
      ]
    },
    {
      "code": "Resume Conversation",
      "explain": "恢复聊天",
      "cmds": [
        {
          "type": "files",
          "label": "恢复聊天",
          "fileType": "file",
          "match": "/\\.(json)$/i"
        },
        {
          "type": "over",
          "label": "恢复聊天",
          "maxLength": 99999999999
        }
      ],
      "mainHide": true,
      "icon": "history.png"
    }
  ],
  "title": "Anywhere"
}
